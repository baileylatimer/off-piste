<section class="split-media-section">
  <div class="split-media-section__container">
    <div class="split-media-section__grid">
      <!-- Text Column -->
      <div class="split-media-section__text-column">
        <div class="split-media-section__text-content">
          {% if section.settings.heading != blank %}
            <h2 class="split-media-section__heading">{{ section.settings.heading | escape }}</h2>
          {% endif %}
          
          {% if section.settings.description != blank %}
            <div class="split-media-section__description">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Media Column -->
      <div class="split-media-section__media-column">
        <div class="split-media-section__media-wrapper">
          <!-- Media Content -->
          {% if section.settings.media_type == 'image' and section.settings.image %}
            <div class="split-media-section__image">
              <img 
                src="{{ section.settings.image | image_url: width: 800 }}"
                alt="{{ section.settings.heading | escape }}"
                loading="lazy"
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.height }}"
              >
            </div>
          {% elsif section.settings.media_type == 'video' and section.settings.video_url %}
            <div class="split-media-section__video">
              <video 
                autoplay 
                muted 
                loop 
                playsinline
              >
                <source src="{{ section.settings.video_url }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          {% endif %}

          <!-- Button Overlay -->
          {% if section.settings.button_label != blank and section.settings.button_url != blank %}
            <div class="split-media-section__button-wrapper">
              <a href="{{ section.settings.button_url }}" class="button split-media-section__button">
                {{ section.settings.button_label | escape }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.split-media-section {
margin-top: 2em;
}

.split-media-section__container {

  margin: 0 auto;
}

.split-media-section__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  align-items: stretch;
}

.split-media-section__text-column {
  background-color: #D9D3C7;
  border-radius: 8px;
  padding: 2em;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: space-between;
}

.split-media-section__text-content {
  width: 100%;
  height: 650px;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: space-between;

}

@media screen and (max-width: 749px) {
  .split-media-section__text-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: space-between;

   padding: 2em .5em;
}
}

.split-media-section__heading {
  margin: 0 0 1em 0;
  font-family: var(--font-header) !important;
  font-weight: var(--font-weight-semibold) !important;
  text-transform: uppercase !important;
  color: #171717;
}

.split-media-section__description {
  font-family: var(--font-body) !important;
  color: #171717;
  line-height: 1.5;
  text-transform: uppercase;
}

.split-media-section__media-column {
  border-radius: 8px;
  overflow: hidden;
  position: relative;
  min-height: 300px;
}

.split-media-section__media-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  min-height: 300px;
}

.split-media-section__image,
.split-media-section__video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.split-media-section__image img,
.split-media-section__video video {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.split-media-section__button-wrapper {
  position: absolute;
  bottom: 1em;
  left: 1em;
  z-index: 2;
}

.split-media-section__button {
  background-color: #EDEAE4 !important;
  color: #171717 !important;
  min-width: 300px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-family: var(--font-button) !important;
  text-transform: uppercase;
  transition: opacity 0.3s ease; 
  border-radius: 0;
}

.split-media-section__button:hover {
  opacity: 0.8;
}

/* Mobile Responsive */
@media screen and (max-width: 749px) {
  .split-media-section {
    margin: 20px 0;
  }
  
  .split-media-section__grid {
    grid-template-columns: 1fr;
    gap: 8px;
  }
  
  /* Invert order on mobile - media first, then text */
  .split-media-section__text-column {
    order: 2;
    padding: .5em 1.5em;
  }
  
  .split-media-section__media-column {
    order: 1;
    min-height: 250px;
  }
  
  .split-media-section__media-wrapper {
    min-height: 250px;
  }
  
  .split-media-section__button {
    min-width: 250px;
    font-size: 0.9em;
  }
  
  .split-media-section__heading {
    font-size: 1.5em;
  }
}

/* Tablet adjustments */
@media screen and (min-width: 750px) and (max-width: 1023px) {
  .split-media-section__text-column {
    padding: 1.5em;
  }
  
  .split-media-section__button {
    min-width: 250px;
  }
}
</style>

{% schema %}
{
  "name": "Split Media Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (H2)",
      "default": "Meet the Tech"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Your description text goes here. This will appear in the left column with the background color.</p>"
    },
    {
      "type": "header",
      "content": "Media Settings"
    },
    {
      "type": "select",
      "id": "media_type",
      "label": "Media Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Recommended size: 800x600px or larger"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "Enter the direct URL to your video file (MP4 format recommended)"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "info": "Where should the button link to?"
    }
  ],
  "presets": [
    {
      "name": "Split Media Section"
    }
  ]
}
{% endschema %}
